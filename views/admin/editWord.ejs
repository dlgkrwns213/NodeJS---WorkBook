<section>
  <a href="/admin/word/show">&larr; 뒤로</a>
  <div class="word-title">
    <h2><%= locals.title %></h2>
  </div>

  <form action="/admin/word/edit/<%= data._id %>?_method=PUT" method="POST">
    <label for="title"><b>단어</b></label>
    <input type="text" name="word" id="word" value="<%= data.word %>">
    
    <label for="title"><b>발음</b></label>
    <input type="text" name="pronunciation" id="pronunciation" value="<%= data.pronunciation %>">

    <label for="body"><b>내용</b></label>
    <textarea name="body" id="body" cols="50" rows="10">
      <%= data.meanings %>
    </textarea>

    <input type="submit" value="수정" class="btn">
  </form>

  <p>---</p>
  <form action="/admin/word/delete/<%= data._id %>?_method=DELETE" method="POST">
    <input type="submit" value="삭제" class="btn btn-delete">
  </form>
</section>