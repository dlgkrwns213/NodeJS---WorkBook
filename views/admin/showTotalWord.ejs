<section>
  <ul class="admin-words">
    <% data.forEach(word => { %>
      <li>
        <a href="/admin/word/show/<%= word._id %>">
          <%= word.word %>
        </a>

        <div class="admin-word-controls">
          <a href="/admin/word/edit/<%= word._id %>" class="btn">편집</a>
          <form action="/admin/word/delete/<%= word._id %>?_method=DELETE" method="POST">
            <input type="submit" value="삭제" class="btn-delete btn">
          </form>
        </div>
      </li>
    <% }) %>
  </ul>
</section>