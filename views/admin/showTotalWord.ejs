<section>
  <h2 class="section-title">단어 목록</h2>
  <% if (data.length > 0) { %>
    <ul class="word-list">
      <% data.forEach(word => { %>
        <li>
          <div>
            <a href="/admin/word/show/<%= word._id %>">
              <%= word.word %>
            </a>
            <% if (word.pronunciation) { %>
              <span class="word-pronunciation">/<%= word.pronunciation %>/</span>
            <% } %>
          </div>
          <div class="word-controls">
            <a href="/admin/word/edit/<%= word._id %>" class="btn btn-edit"><b>편집</b></a>
            <form action="/admin/word/delete/<%= word._id %>?_method=DELETE" method="POST" class="delete-form">
              <button type="submit" class="btn btn-delete">삭제</button>
            </form>
          </div>
        </li>
    <% }) %>
    </ul>
  <% } else { %>
    <p class="no-words-message">등록된 단어가 없습니다.</p>
  <% } %>
</section>

<script>
  document.querySelectorAll('ul.word-list li').forEach(li => {
    li.addEventListener('click', function () {
      const link = this.querySelector('a');
      if (link) {
        window.location.href = link.href;
      }
    });
  });
</script>

