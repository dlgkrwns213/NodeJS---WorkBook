<div class="form-container">
  <h2 class="form-title">관리자 회원가입</h2>
  <form action="/admin/register" method="POST" class="form">
    <div class="form-group">
      <label for="adminID" class="form-label"><b>아이디</b></label>
      <input type="text" name="adminID" id="adminID" class="form-input">
    </div>

    <div class="form-group">
      <label for="adminname" class="form-label">이름</label>
      <input type="text" name="adminname" id="adminname" class="form-input">
    </div>

    <div class="form-group">
      <label for="password" class="form-label">비밀번호</label>
      <input type="password" name="password" id="password" class="form-input">
    </div>

    <input type="submit" value="회원가입" class="btn btn-submit">
  </form>
</div>
